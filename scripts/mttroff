import sys
import libavg

try:
    import mttroff
except ImportError:
    sys.path = ['..', '/usr/share/games'] + sys.path

    try:
        import mttroff
    except ImportError:
        sys.stderr.write('ERROR: Cannot find mttroff package: reinstall the game.\n')
        sys.exit(1)

if __name__ == '__main__':
    libavg.app.App().run(mttroff.TROff(), app_resolution='', app_fullscreen='true')
